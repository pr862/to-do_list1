rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User-specific todos collections
    // Pattern: todos_{user_uid} where {user_uid} is the Firebase Auth UID
    match /todos_{userId} {
      // Allow read access only to the authenticated user who owns this collection
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write access only to the authenticated user who owns this collection
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow create new todos
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update existing todos
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow delete todos
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny access to any other collections not explicitly defined above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
